---
const footerLinks = {
  Platform: [
    { label: 'Overview', href: '/platform' },
    { label: 'Inference Engine', href: '/platform#engine' },
    { label: 'Model Marketplace', href: '/platform#marketplace' },
    { label: 'Deployment', href: '/platform#deployment' },
  ],
  Solutions: [
    { label: 'Healthcare', href: '/solutions/healthcare' },
    { label: 'Legal', href: '/solutions/legal' },
    { label: 'Financial Services', href: '/solutions/financial-services' },
    { label: 'Government', href: '/solutions/government' },
  ],
  Company: [
    { label: 'About', href: '/about' },
    { label: 'Security', href: '/security' },
    { label: 'Pricing', href: '/pricing' },
    { label: 'Contact', href: '/contact' },
  ],
  Legal: [
    { label: 'Privacy Policy', href: '/privacy' },
    { label: 'Terms of Service', href: '/terms' },
  ],
}
---

<footer class="border-t border-border bg-black mt-auto">
  <div class="mx-auto max-w-7xl px-6 py-16">
    <div class="grid grid-cols-2 gap-8 md:grid-cols-5">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="inline-block mb-4">
          <span class="font-display text-lg text-bright">AskSLM</span>
        </a>
        <p class="text-sm text-muted leading-relaxed max-w-xs">
          Private AI infrastructure for regulated enterprises. Austin, TX.
        </p>
        <a href="mailto:contact@askslm.com" class="text-sm text-gold hover:text-gold-bright mt-3 inline-block transition-colors">
          contact@askslm.com
        </a>
      </div>

      <!-- Link columns -->
      {Object.entries(footerLinks).map(([title, links]) => (
        <div>
          <h4 class="text-sm font-semibold text-bright mb-4">{title}</h4>
          <ul class="space-y-2.5">
            {links.map(link => (
              <li>
                <a href={link.href} class="text-sm text-muted hover:text-bright transition-colors duration-200">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="mt-12 pt-8 border-t border-border flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-xs text-muted">&copy; 2026 AskSLM. All rights reserved.</p>
      <div class="flex items-center gap-6">
        <span class="inline-flex items-center gap-1.5 text-xs text-muted">
          <span class="h-1.5 w-1.5 rounded-full bg-safe animate-pulse"></span>
          All systems operational
        </span>
      </div>
    </div>
  </div>
</footer>
