<Layout title="Privacy Policy">
  <section class="pt-32 pb-20 md:pt-40 md:pb-28">
    <div class="mx-auto max-w-3xl px-6">
      <p class="font-mono text-[10px] text-gold/50 tracking-[0.3em] uppercase mb-6">Legal</p>
      <h1 class="font-display text-4xl md:text-5xl tracking-[-0.02em] mb-4">Privacy Policy</h1>
      <p class="text-sm text-muted mb-16">Last updated: February 2026</p>

      <div class="space-y-12 text-text text-[15px] leading-relaxed">
